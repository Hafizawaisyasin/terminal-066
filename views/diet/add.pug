extends ../layout

block content
    h1 Add New Diet Plan
    form(action="/diet/add",method="post")
        .form-group
            label(for="type") Diet Type
            input#name(type="text", class="form-control", name="type")
        .form-group
            label(for="description") Diet Description
            input#price(type="text", class="form-control", name="description")
        
        input(type="submit", class="btn btn-info" )
    