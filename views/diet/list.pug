extends ../layout

block content
    .row
        .col-sm-8
            h1=title
        .col-sm-4
            a(href="/diet/add", class="btn btn-info my-10 float-right") Add New Product
    table.table
        thead
            tr
                th(style="text-align:center") Diet Type
                th(style="text-align:center") Diet Description
                th(style="text-align:center") Action

        tbody
            each diet in diets
                tr
                    td(style="text-align:center")=diet.type
                    td(style="text-align:center")=diet.description
                    td(style="text-align:center")
                        a(href="/diet/delete/"+diet._id, class="btn faas btn-danger") <i class="fas fa-trash-alt"></i>

                    br
                   
                    
                       